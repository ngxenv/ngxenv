#/bin/bash -e

NGINX_PREFIX=`pwd`/nginx
NGINX_BINARY=$NGINX_PREFIX/sbin/nginx 
NGINX_CONFIG=$NGINX_PREFIX/conf/nginx.conf
NGINX_VERSION=1.9.4
OPENSSL_VERSION=1.0.1i


if [ ! -z "$1" ]; then
  echo "Nginx is going to be $1 now..."

  if [ "$1" == 'start' ]; then
    $NGINX_BINARY -c $NGINX_CONFIG
  elif [ "$1" == 'stop' ]; then
    $NGINX_BINARY -s stop
  else
    echo "Argument is invalid."
  fi
  
  exit 0
fi


if [ ! -f $NGINX_BINARY ]; then

  NGXENV_SETTINGS="
  cd /tmp/nginx-$NGINX_VERSION;
  ./configure 
  --prefix=$NGINX_PREFIX
  --pid-path=`pwd`/nginx/pids/nginx.pid 
  --conf-path=$NGINX_CONFIG
  --sbin-path=$NGINX_BINARY 
  --error-log-path=`pwd`/nginx/log/nginx.error.log 
  --http-log-path=`pwd`/nginx/log/nginx.access.log 
  --with-pcre-jit 
  --with-http_ssl_module 
  --with-http_spdy_module 
  --without-mail_pop3_module 
  --without-mail_smtp_module 
  --without-mail_imap_module 
  --with-http_stub_status_module 
  --with-http_gzip_static_module 
  --with-http_secure_link_module 
  --with-http_auth_request_module 
  --add-module=/tmp/nginx-push-stream-module
  >/dev/null
  "

  echo 'Download Nginx...'
  cd /tmp
  curl --progress-bar -O http://nginx.org/download/nginx-$NGINX_VERSION.tar.gz
  tar xzf ./nginx-$NGINX_VERSION.tar.gz && rm -f ./nginx-$NGINX_VERSION.tar.gz

  echo 'Download nginx-push-stream-module...'
  cd /tmp
  git clone --depth 1 https://github.com/wandenberg/nginx-push-stream-module.git
  
  cd /tmp/nginx-$NGINX_VERSION

  echo '#!/bin/bash -e' > /tmp/nginx_build.sh
  echo "$NGXENV_SETTINGS" | tr -d '\n' >> /tmp/nginx_build.sh
  chmod +x /tmp/nginx_build.sh

  echo 'Make install Nginx...'
  bash -e /tmp/nginx_build.sh
  make >/dev/null
  make install >/dev/null

  echo 'Temp directory clean up...'
  rm -rf /tmp/{nginx-$NGINX_VERSION,nginx-push-stream-module,nginx_build.sh}

fi

echo 'You have Nginx installed!'
echo 'Use start/stop arguments to manage Nginx process...'
